<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/size10dp"
        android:layout_margin="@dimen/margin10dp"
        android:elevation="@dimen/size10dp"
        android:layout_height="@dimen/size100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/poster"
                android:layout_width="@dimen/size70dp"
                android:layout_height="@dimen/size70dp"
                android:layout_margin="@dimen/margin5dp"
                android:elevation="@dimen/size10dp"
                app:cardCornerRadius="@dimen/size10dp">

                <ImageView
                    android:id="@+id/iv_poster"
                    android:layout_width="@dimen/size70dp"
                    android:layout_height="@dimen/size70dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_launcher_foreground"
                    android:foregroundGravity="center"
                    android:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10dp"
                android:layout_toRightOf="@id/poster"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Wonder Woman"
                    android:id="@+id/tv_title_film"
                    android:textSize="@dimen/textSize18sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Movie"
                    android:id="@+id/tv_desc_film"
                    android:textSize="@dimen/textSize14sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="2017"
                    android:id="@+id/tv_years_film"
                    android:textSize="@dimen/textSize14sp"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:text="Detil"
                android:id="@+id/tv_detail"
                android:layout_margin="@dimen/margin20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize16sp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>